@model List<DiaryEntry>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Create" asp-controller="DiaryEntry">
                <
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg>  Create new Diary Entry
            </a>
        </div>
        <div class="col-6 text-end">
            <h2> Diary Entry</h2>
        </div>

    </div>

</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>Content</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Content</td>
                    <td>@obj.Created</td>
                    <td>
                        <div class="w-75 btn-group " role="group">
                            <a asp-controller="DiaryEntry" asp-action="Edit" class="btn btn-success mx-2" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i>   Edit
                            </a>
                            <a asp-controller="DiaryEntry" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id">
                                <i class="bi bi-archive-fill"></i>  Delete
                            </a>
                        </div>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>